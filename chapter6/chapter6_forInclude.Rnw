\center
<<newBinoms, echo=F, results="asis">>=
output = newBinoms
colnames(output) = c("c_1", "c_2", "c_3")
kable(output, align="c")
@
\caption{New parameter values for the binomials associated with each mixture component.}
\label{tab:newBinoms}
\end{table}

